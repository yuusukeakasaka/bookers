<!DOCTYPE html>
<html>
 <head>
<link rel="stylesheet">
<title>Bookers</title>
</head>

<body>
 <P id="notice"></P>
<h2>Books</h2>


<table>

   <thead>
     <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
     </tr>
   </thead>
  <% flash.each do |message_type, message| %>
        <%= message %>
        <% end %>
   <tbody>

    <tr>

    <% @books.each do |book| %>

      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
    </tr>
    <% end %>
   </tbody>

</table>

<h3>New book</h3>
<% if @book.errors.any? %>
error
  <% @book.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
<h5>title</h5>
<%= f.text_field :title %>
<h5>body</h5>
 <%= f.text_area :body %>
<br>
 <%= f.submit 'Create Book' %>
 <% end %>
</body>
</html>